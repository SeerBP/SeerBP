{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "https://seerbp.github.io/SeerBP/schemas/common/assets",
  "title": "Assets Schemas",
  "description": "各种资产的 JSON Schema 定义",
  "$defs": {
    "EquipmentType": {
      "description": "装备类型",
      "type": "string",
      "enum": [ "HEAD", "EYE", "WAYST", "HAND", "FOOT" ]
    },
    "PetData": {
      "description": "精灵数据",
      "type": "object",
      "required": [ "id", "name", "element_type" ],
      "properties": {
        "id": {
          "$ref": "https://seerbp.github.io/SeerBP/schemas/common/asset_identifiers#/$defs/PetId"
        },
        "name": {
          "description": "精灵名称",
          "type": "string"
        },
        "element_type": {
          "$ref": "https://seerbp.github.io/SeerBP/schemas/common/asset_identifiers#/$defs/ElementTypeId"
        }
      },
      "additionalProperties": false
    },
    "EquipmentData": {
      "description": "装备数据",
      "type": "object",
      "required": [ "id", "name", "type" ],
      "properties": {
        "id": {
          "$ref": "https://seerbp.github.io/SeerBP/schemas/common/asset_identifiers#/$defs/EquipId"
        },
        "name": {
          "description": "装备名称",
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/EquipmentType"
        }
      },
      "additionalProperties": false
    },
    "TitleData": {
      "description": "称号数据",
      "type": "object",
      "required": [ "id", "name", "description" ],
      "properties": {
        "id": {
          "$ref": "https://seerbp.github.io/SeerBP/schemas/common/asset_identifiers#/$defs/TitleId"
        },
        "name": {
          "description": "称号名称",
          "type": "string"
        },
        "description": {
          "description": "称号描述",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "SuitData": {
      "description": "套装数据",
      "type": "object",
      "required": [ "id", "name", "description" ],
      "properties": {
        "id": {
          "$ref": "https://seerbp.github.io/SeerBP/schemas/common/asset_identifiers#/$defs/SuitId"
        },
        "name": {
          "description": "套装名称",
          "type": "string"
        },
        "description": {
          "description": "套装描述",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "https://seerbp.github.io/SeerBP/schemas/common/asset_identifiers": {
      "$schema": "https://json-schema.org/draft/2020-12/schema#",
      "$id": "https://seerbp.github.io/SeerBP/schemas/common/asset_identifiers",
      "title": "Asset Identifiers Schemas",
      "description": "各种资产 ID 的 JSON Schema 定义",
      "$defs": {
        "PetId": {
          "description": "精灵ID，必须为大于 0 的正整数",
          "type": "integer",
          "exclusiveMinimum": 0,
          "format": "int32"
        },
        "EquipId": {
          "description": "装备ID，必须为大于 0 的正整数。",
          "type": "integer",
          "exclusiveMinimum": 0,
          "format": "int32"
        },
        "TitleId": {
          "description": "称号ID，必须为大于 0 的正整数。",
          "type": "integer",
          "exclusiveMinimum": 0,
          "format": "int32"
        },
        "SuitId": {
          "description": "套装ID，必须为大于 0 的正整数。",
          "type": "integer",
          "exclusiveMinimum": 0,
          "format": "int32"
        },
        "ElementTypeId": {
          "description": "精灵属性ID。",
          "type": "integer",
          "minimum": 0,
          "format": "int32"
        }
      }
    }
  }
}
