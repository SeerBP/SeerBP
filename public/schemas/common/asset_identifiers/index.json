{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "https://seerbp.github.io/schemas/common/asset_identifiers",
  "title": "Asset Identifiers Schemas",
  "description": "各种资产 ID 的 JSON Schema 定义",
  "$defs": {
    "PetId": {
      "description": "精灵ID，必须为大于 0 的正整数",
      "type": "integer",
      "exclusiveMinimum": 0,
      "format": "int32"
    },
    "EquipId": {
      "description": "装备ID，必须为大于 0 的正整数。",
      "type": "integer",
      "exclusiveMinimum": 0,
      "format": "int32"
    },
    "TitleId": {
      "description": "称号ID，必须为大于 0 的正整数。",
      "type": "integer",
      "exclusiveMinimum": 0,
      "format": "int32"
    },
    "SuitId": {
      "description": "套装ID，必须为大于 0 的正整数。",
      "type": "integer",
      "exclusiveMinimum": 0,
      "format": "int32"
    },
    "ElementTypeId": {
      "description": "精灵属性ID。",
      "type": "integer",
      "minimum": 0,
      "format": "int32"
    }
  }
}